{
  "version": "1.0.0",
  "description": "Hook registry for plugin-dev plugin",
  "hooks": {
    "PreToolUse": [
      {
        "name": "validate-skill-metadata",
        "script": "hooks/scripts/skill-tools/validate-skill-metadata.py",
        "matcher": "Write|Edit",
        "language": "python",
        "timeout": 5000,
        "description": "Validates SKILL.md frontmatter: name format, description length, required fields",
        "canBlock": true,
        "exitCodes": {
          "0": "Valid - allow write",
          "2": "Invalid - block write with error message"
        }
      },
      {
        "name": "validate-agent",
        "script": "hooks/scripts/agent-tools/validate-agent.sh",
        "matcher": "Write|Edit",
        "language": "bash",
        "timeout": 5000,
        "description": "Validates agent .md frontmatter: name, description, tools, model fields",
        "canBlock": true,
        "exitCodes": {
          "0": "Valid - allow write",
          "2": "Invalid - block write with error message"
        }
      }
    ],
    "PostToolUse": [
      {
        "name": "lint-skill",
        "script": "hooks/scripts/skill-tools/lint-skill.sh",
        "matcher": "Write|Edit",
        "language": "bash",
        "timeout": 10000,
        "description": "Non-blocking quality warnings for SKILL.md: structure, progressive disclosure, CSO",
        "canBlock": false
      },
      {
        "name": "lint-agent",
        "script": "hooks/scripts/agent-tools/lint-agent.sh",
        "matcher": "Write|Edit",
        "language": "bash",
        "timeout": 10000,
        "description": "Non-blocking quality warnings for agent files: role definition, constraints, workflow",
        "canBlock": false
      },
      {
        "name": "lint-hook",
        "script": "hooks/scripts/hook-tools/lint-hook.sh",
        "matcher": "Write|Edit",
        "language": "bash",
        "timeout": 10000,
        "description": "Validates hook scripts: syntax check, exit codes, stdin handling, hardcoded paths",
        "canBlock": false
      },
      {
        "name": "check-skill-size",
        "script": "hooks/scripts/skill-tools/check-skill-size.sh",
        "matcher": "Write|Edit",
        "language": "bash",
        "timeout": 5000,
        "description": "Warns if SKILL.md exceeds 500 lines (progressive disclosure check)",
        "canBlock": false
      }
    ],
    "Stop": [
      {
        "name": "skill-audit-report",
        "script": "hooks/scripts/skill-tools/skill-audit-report.sh",
        "language": "bash",
        "timeout": 30000,
        "description": "Session-end summary of skills created/modified",
        "canBlock": false
      },
      {
        "name": "agent-audit-report",
        "script": "hooks/scripts/agent-tools/agent-audit-report.sh",
        "language": "bash",
        "timeout": 30000,
        "description": "Session-end summary of agents created/modified",
        "canBlock": false
      },
      {
        "name": "hook-audit-report",
        "script": "hooks/scripts/hook-tools/hook-audit-report.sh",
        "language": "bash",
        "timeout": 30000,
        "description": "Session-end summary of hooks created/modified",
        "canBlock": false
      }
    ]
  },
  "scripts": {
    "skill-tools": [
      "validate-skill-metadata.py",
      "lint-skill.sh",
      "check-skill-size.sh",
      "skill-audit-report.sh"
    ],
    "agent-tools": [
      "validate-agent.sh",
      "lint-agent.sh",
      "agent-audit-report.sh"
    ],
    "hook-tools": [
      "lint-hook.sh",
      "hook-audit-report.sh"
    ],
    "ecosystem": [
      "discover-ecosystem.py",
      "generate-integrations.py",
      "log-discovery.sh"
    ]
  }
}
